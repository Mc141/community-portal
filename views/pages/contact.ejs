<div class="contact-container">
  <div class="contact-left">
    <img src="/images/contact/ContactPagePic.png" alt="Contact Image">
  </div>

  <div class="contact-right">
    <form action="/contact" method="POST" onsubmit="return validateForm()" novalidate>
      <h2>Send Us an Enquiry</h2>

      <label for="first-name">First Name</label>
      <input type="text" id="first-name" name="firstName" required>

      <label for="last-name">Last Name</label>
      <input type="text" id="last-name" name="lastName" required>

      <label for="email">Email</label>
      <input type="email" id="email" name="email" required>

      <label for="phone">Phone number</label>
      <input type="text" id="phone" name="phone" pattern="^[0-9+\-\s]{7,15}$">

      <label for="message">Message</label>
      <textarea id="message" name="message" rows="5" required style="resize:none"></textarea>

      <button type="submit">Send Enquiry</button>
    </form>
  </div>
</div>

<script src="/js/form.js"></script>
