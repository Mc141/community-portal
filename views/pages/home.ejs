<div class="pure-g home-container">

  <div class="pure-u-1 welcome-section">
    <h1>Welcome to Our Community Portal</h1>
    <p>Connecting people, events, and ideas in one vibrant space.</p>
  </div>

  <h2>Upcoming Events</h2>

  <!-- START: dynamic -->
  <div class="pure-u-1 events-section">
    <div class="pure-g event-list">

      <% events.forEach(function(event) { %>
        <div class="pure-u-1 pure-u-md-1-3 event-card">
          <div class="event-card-inner">
            <img src="<%= event.image %>" 
                 alt="<%= event.title %>" 
                 class="event-img">
            <h3><%= event.title %></h3>
            <p><strong>Date:</strong> <%= event.date %></p>
            <p><strong>Location:</strong> <%= event.location %></p>
            <p class="event-desc"><%= event.description %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  <!-- END: Dynamic -->

</div>
